{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "name": "User",
  "description": "A user in the system",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "name": {
      "type": "object",
      "properties": {
        "first": {
          "name": "First name",
          "type": "string",
          "minLength": 2
        },
        "middle": {
          "name": "Middle name",
          "type": "string"
        },
        "last": {
          "name": "Last name",
          "type": "string",
          "minLength": 2
        }
      },
      "required": [ "first", "last" ]
    },
    "email": { "type": "string", "minLength": 5 },
    "password": { "type": "string", "minLength": 7 },
    "active": { "type": "boolean" },
    "accounts": { "type": "array" },
    "claims": { "type": "array" }
  },
  "required": [ "name", "email", "password" ]
}